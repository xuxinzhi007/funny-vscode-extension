{
  "name": "funny-vscode-extension",
  "displayName": "有趣的VSCode扩展",
  "description": "一个有趣的VSCode扩展",
  "version": "0.0.1",
  "publisher": "user",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "funny-vscode-extension.showJoke",
        "title": "显示笑话"
      },
      {
        "command": "funny-vscode-extension.showEmoji",
        "title": "随机表情"
      },
      {
        "command": "funny-vscode-extension.clickCoin",
        "title": "点击获得金币"
      },
      {
        "command": "funny-vscode-extension.showSaveInfo",
        "title": "查看存档信息",
        "icon": "$(info)"
      },
      {
        "command": "funny-vscode-extension.openSaveFolder",
        "title": "打开存档文件夹",
        "icon": "$(folder-opened)"
      },
      {
        "command": "funny-vscode-extension.backupSave",
        "title": "备份存档",
        "icon": "$(archive)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "idleGameContainer",
          "title": "挂机游戏",
          "icon": "$(star-full)"
        }
      ]
    },
    "views": {
      "idleGameContainer": [
        {
          "type": "webview",
          "id": "idleGameView",
          "name": "金币挂机"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "funny-vscode-extension.showSaveInfo",
          "when": "view == idleGameView",
          "group": "navigation"
        },
        {
          "command": "funny-vscode-extension.openSaveFolder",
          "when": "view == idleGameView",
          "group": "1_save@1"
        },
        {
          "command": "funny-vscode-extension.backupSave",
          "when": "view == idleGameView",
          "group": "1_save@2"
        }
      ],
      "commandPalette": [
        {
          "command": "funny-vscode-extension.showSaveInfo",
          "when": "true"
        },
        {
          "command": "funny-vscode-extension.openSaveFolder",
          "when": "true"
        },
        {
          "command": "funny-vscode-extension.backupSave",
          "when": "true"
        }
      ]
    },
    "keybindings": [
      {
        "command": "funny-vscode-extension.showJoke",
        "key": "ctrl+alt+j",
        "mac": "cmd+alt+j"
      },
      {
        "command": "funny-vscode-extension.showEmoji",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e"
      },
      {
        "command": "funny-vscode-extension.clickCoin",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      }
    ],
    "configuration": {
      "title": "有趣的VSCode扩展",
      "properties": {
        "funny-vscode-extension.enableRippleEffect": {
          "type": "boolean",
          "default": false,
          "description": "启用鼠标点击波纹特效"
        },
        "funny-vscode-extension.rippleSize": {
          "type": "number",
          "default": 100,
          "minimum": 50,
          "maximum": 300,
          "description": "波纹特效的大小（像素）"
        },
        "funny-vscode-extension.enableCodeEffect": {
          "type": "boolean",
          "default": false,
          "description": "启用编码特效（金币粒子+关键词爆炸）"
        },
        "funny-vscode-extension.enableKeywordEffect": {
          "type": "boolean",
          "default": true,
          "description": "启用关键词特殊特效（在编码特效启用时生效）"
        }
      }
    }
  }
}